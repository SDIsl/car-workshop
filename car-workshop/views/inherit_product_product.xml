        <!--Action Wheels Menu-->
        <record id="action_wheels_view_wizard" model="ir.actions.act_window">
            <field name="name">Wheel Wizard</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">car_workshop.wheels_wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="car-workshop_wheels_wizard_view_form"/>
            <!--<field name="search_view_id" ref="car-workshop_fleet_wheels_view_search"/>-->
            <field name="target">new</field>
        </record>

        <!--Wheels Menu-->
        <menuitem id="car_wheels_menu" name="Wheels"
                  parent="car_products_menus"
                  sequence="3" action="action_wheels_view_wizard"/>

    </data>
