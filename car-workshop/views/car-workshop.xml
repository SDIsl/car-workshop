<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!--Action Account Invoice Menu-->
        <record model="ir.actions.act_window" id="action_car_account_invoice_config">
            <field name="name">Account Invoice</field>
            <field name="res_model">account.invoice</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!--Action Customers Menu-->
        <record model="ir.actions.act_window" id="action_car_customers_config">
            <field name="name">Customers</field>
            <field name="res_model">res.partner</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,form</field>
            <field name="context">{"search_default_customer":1}</field>
        </record>


        <!--Main Menu-->
        <menuitem id="main_car_workshop_menu" name="Car Workshop" sequence="1"/>

        <!--Account Invoice Menu-->
        <menuitem id="car_account_invoice_menu" name="Account Invoice"
                  parent="main_car_workshop_menu"
                  sequence="3" action="action_car_account_invoice_config"/>

        <!--Customers Menus-->
        <menuitem id="car_customers_menus" name="Customers"
                  parent="main_car_workshop_menu"
                  sequence="4"/>

        <!--Customer Menu-->
        <menuitem id="car_customers_menu" name="Customers"
                  parent="car_customers_menus"
                  sequence="1" action="action_car_customers_config"/>


        <!--Vehicle Configuration Menus-->
        <menuitem id="car_vconfig_menus" name="Configuration"
                  parent="main_car_workshop_menu"
                  sequence="6"/>


        <record id="car-workshop_res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.car-workshop</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="5"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <!--La magia-->
            </xpath>
        </field>
    </record>

        <record id="car-workshop_config_settings_action" model="ir.actions.act_window">
            <field name="name">Settings</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.config.settings</field>
            <field name="view_id" ref="car-workshop_res_config_settings_view_form"/>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
            <field name="context">{'module' : 'car_workshop'}</field>
        </record>
        <!--Settings Menu-->
        <menuitem id="car_settings_menu" name="Settings"
                  parent="car_vconfig_menus"
                  sequence="1" action="car-workshop_config_settings_action"/>
    </data>
</odoo>
