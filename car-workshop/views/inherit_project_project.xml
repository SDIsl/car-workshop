                                    <field name="alias_name" class="oe_inline"/>@<field name="alias_domain" class="oe_inline" readonly="1"/>
                                </div>
                                <field name="user_id" invisible="1"/>
                            </group>
                        </group>
                        <footer>
                            <button string="Create &amp; Edit" name="edit_dialog" type="object" class="btn-primary"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

