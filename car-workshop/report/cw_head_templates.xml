<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--Translatable Head Vechicle and Customer Template-->
        <template id="report_head_vehicle_customer">
           <div class="oe_structure"/>
                        <div class="row">
                            <div class="col-xs-5 col-xs-offset-1">
                                <!--<div t-field="doc.vehicle_id"/>-->
                                <p>
                                    <span t-field="doc.vehicle_id.model_id.brand_id"/>
                                    <span t-field="doc.vehicle_id.model_id.name"/><br/>
                                    <span t-field="doc.vehicle_id.license_plate"/><br/>
                                    BASTIDOR:
                                    <span t-field="doc.vehicle_id.vin_sn"/><br/>
                                    KM:
                                    <span t-field="doc.vehicle_id.odometer"/>
                                </p>
                            </div>
                            <div class="col-xs-5 col-xs-offset-1"
                                 t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}'/>
                            <div t-field="doc.partner_id"
                                 t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}'/>
                            <p t-if="doc.partner_id.vat">DNI:
                                <span t-field="doc.partner_id.vat"/>
                            </p>
                            <p t-if="doc.partner_id.mobile">
                                <span t-field="doc.partner_id.mobile"/>
                            </p>
                            <p t-if="doc.partner_id.phone">
                                <span t-field="doc.partner_id.phone"/>
                            </p>
                        </div>
        </template>
    </data>
</odoo>