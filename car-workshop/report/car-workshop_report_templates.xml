<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--Translatable Admission Sheet Template-->
    <template id="report_admission_sheet_document">
        <t t-set="doc" t-value="doc.with_context({'lang':doc.partner_id.lang})" />
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>Admission Sheet</h2>
                        <group>                        
                            Reoair Order <span t-field="o.name"/><br/>
                            Date <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d %H:%M')"/>  
                        </group>
                        <group id="customer data">
                            Customer <span t-field="o.partner_id.name"/><br/>
                            VAT <span t-field="o.partner_id.vat"/><br/>
                            Address <span t-field="o.partner_id.street"/><br/>
                            Phone <span t-field="o.partner_id.phone"/><br/>
                            Mobile <span t-field="o.partner_id.mobile"/><br/>
                        </group>
                        <group id="vehicle_data">
                            Vehicle <span t-field="o.vehicle_id.name"/><br/>
                            License Plate <span t-field="o.vehicle_id.license_plate"/><br/>
                            Chassis Number <span t-field="o.vehicle_id.vin_sn"/><br/>
                        </group>
                        <div id="repair data" colspan="2">
                            <div>
                                <img class="img img-responsive" src="/car-workshop/static/src/img/car_repair.jpg" style="width: 25%;"/>
                                FOTO
                            </div>
                            <div>
                                
                                <span t-field="o.description"/>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
    <!--Admission Sheet Main Template-->
    <template id="report_admission_sheet">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="car-workshop.report_admission_sheet_document" t-lang="doc.partner_id.lang"/></t>
        </t>
    </template>
</odoo>