<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="car-workshop_wheels_wizard_view_form" model="ir.ui.view">
            <field name="name">Wheels Wizard</field>
            <field name="model">car_workshop.wheels_wizard</field>
            <field name="arch" type="xml">
                <form string="Wheels Wizard">
                    <group col="2">
                        <group>
                            <field name="width"/>
                            <field name="height"/>
                            <field name="diameter"/>
                        </group>
                        <group>
                            <field name="brands"/>
                            <field name="season"/>
                        </group>
                    </group>


                    <footer>
                        <button name="create_request"
                                string="Search" type="object"
                                class="btn-primary"/>
                        <button string="Cancel"
                                class="btn-default"
                                special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_wheels_view_wizard" model="ir.actions.act_window">
            <field name="name">Wheel Wizard</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">car_workshop.wheels_wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="car-workshop_wheels_wizard_view_form"/>
            <field name="target">new</field>
        </record>

    </data>
</odoo>