                   eval="[
                   (3,ref('fleet.fleet_group_user')),
                   (4,ref('fleet.fleet_group_manager')),
                   ]"/>
        </record>

        <record id="project.menu_main_pm" model="ir.ui.menu">
            <field name="groups_id"
                   eval="[
