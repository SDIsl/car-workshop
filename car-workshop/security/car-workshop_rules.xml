                   eval="[
                   (3,ref('hr_timesheet.group_hr_timesheet_user')),
                   (4,ref('hr_timesheet.group_timesheet_manager')),
                   ]"/>
        </record>

        <!--Empleados-->
        <record id="hr.menu_hr_root" model="ir.ui.menu">
            <field name="groups_id"
                   eval="[
