<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Product Product Form View -->
        <record id="product_template_form_view" model="ir.ui.view">
            <field name="name">product.template.common.form</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='options']" position="inside">
                    <div>
                        <field name="is_a_tire"/>
                        <label for="is_a_tire"/>
                    </div>
                </xpath>
                <xpath expr="//page[@name='general_information']" position="after">
                    <page string="Tire Attributes" attrs="{'invisible':[('is_a_tire','=',False)]}"
                          name="tire_attributes">
                        <group>
                            <field name="width"/>
                            <field name="height"/>
                            <field name="diameter"/>
                        </group>
                        <group>
                            <field name="brand_id"/>
                            <field name="season"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

        <!-- Inherit Search View -->
        <record id="product_search_form_view" model="ir.ui.view">
            <field name="name">Tire Catalog Search</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_search_form_view"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='product_tmpl_id']" position="after">
                    <field name="width"/>
                    <field name="height"/>
                    <field name="diameter"/>
                    <field name="brand_id"/>
                    <field name="season"/>
                </xpath>

            </field>
        </record>

        <!--Action Tire Menu-->
        <record id="action_tire_view_wizard" model="ir.actions.act_window">
            <field name="name">Tire Wizard</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">tire_catalog.tire_wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="tire_wizard_view_form"/>
            <!--<field name="search_view_id" ref="car-workshop_fleet_wheels_view_search"/>-->
            <field name="target">new</field>
        </record>

        <!--Action Products Menu-->
        <record model="ir.actions.act_window" id="action_car_vproducts_config">
            <field name="name">Products</field>
            <field name="res_model">product.product</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,form</field>
        </record>

        <!-- Si se no se quiere depender de Car-Workshop tenemos que hacer el siguiente menú "Catalogue Menu"-->
        <!-- como padre y que se posicione en el menú horizontal.-->

         <!--Catalogue Menu-->
        <menuitem id="tire_catalogue_menus" name="Catalogue"
                  parent="car-workshop.main_car_workshop_menu"
                  sequence="5"/>


        <!--Products Menu-->
        <menuitem id="car_vproducts_menu" name="Products"
                  parent="tire_catalogue_menus"
                  sequence="1" action="action_car_vproducts_config"/>

        <!--Tires Menu-->
        <menuitem id="car_tire_menu" name="Tires"
                  parent="tire_catalogue_menus"
                  sequence="2" action="action_tire_view_wizard"/>

    </data>
</odoo>